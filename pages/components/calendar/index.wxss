/* pages/components/calendar/index.wxss */
.calendar-container {
	background-color: white;
	border-radius: 20rpx 20rpx 0 0;
	padding: 20rpx 0;
}

/* 日历开头 */
.calendar-title {
	font-size: 30rpx;
	font-weight: 500;
	color: #333333;
	text-align: center;
}
.calnedar-subtitle-box {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 40rpx;
}
.calendar-icon-last,
.calendar-icon-next {
	width: 30rpx;
	height: 30rpx;
}
.calendar-subtitle {
	font-size: 28rpx;
	color: #333333;
	margin: 0 20rpx;
}
.calendar-week-box {
	position: relative;
	display: flex;
	justify-content: center;
	box-shadow: 0px 4px 2px 0px rgba(0, 0, 0, 0.04);
	margin-top: 20rpx;
}
.calendar-data-item,
.calendar-week-item {
	width: 107rpx;
	height: 107rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.calendar-data-cur-text,
.calendar-week-text {
	font-size: 28rpx;
	color: #333333 !important;
}
.calendar-data-text {
	font-size: 28rpx;
	color: #999999;
}

.calendar-data-tip {
	font-size: 26rpx;
}

/* 水印 */
.calendar-data-month-mark {
	position: absolute;
	top: 50%;
	left: 50%;
	z-index: -1;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	pointer-events: none;
	color: rgba(242, 243, 245, .8);
	font-size: 160px;
}

/* 日历详情 */
.calendar-data-box {
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
}

